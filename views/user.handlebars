
 <h2 class="page-header">User List</h2>


 <div class="container">

 <button class="btn btn-default">Add User</button>

<p></p>
    <table id="example" class="display" style="width:100%">
      <thead>
        <tr>
          <th>Name</th>
          <th>Gender</th>
          <th>Date of Birth</th>
          <th>Home Address</th>
          <th>Phone Number</th>
          <th>Email</th>
          <th>Username</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        {{#each users}}
        {{#isEmployee this}}
        <tr>
          <td>{{this.name}}</td>
          <td>{{this.gender}}</td>
          <td>{{this.dob}}</td>
          <td>{{this.address}}</td>
          <td>{{this.phone}}</td>
          <td>{{this.email}}</td>
          <td>{{this.username}}</td>
          <td><button class="btn btn-default">Update</button><button class="btn btn-default">Delete</button></td>
          </tr>
          {{/isEmployee}}
        {{/each}}
      </tbody>
      <tfoot>
        <th>Name</th>
          <th>Gender</th>
          <th>Date of Birth</th>
          <th>Home Address</th>
          <th>Phone Number</th>
          <th>Email</th>
          <th>Username</th>
          <th>Action</th>
      </tfoot>
    </table>
</div>
<br>
<script>
  $(document).ready( function () {
			$('#example')
				.addClass( 'nowrap' )
				.dataTable( {
					responsive: true,
					columnDefs: [
						{ targets: [-1, -3], className: 'dt-body-right' }
					]
				} );
		} );
</script>
