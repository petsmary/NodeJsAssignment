<div class="container">
    <h1>Add Job</h1>
  	<hr>
	
      <!-- edit form column -->
      <div class="col-md-9 personal-info">
        
        <h3>Job info</h3>
        <form class="form-horizontal" role="form" action="/jobs/add" method="post" >
        <input type="hidden" name="xx" value="{{user.password}}"/>        
          <div class="form-group">
            <label class="col-lg-3 control-label">Position:</label>
            <div class="col-lg-8">
              <input class="form-control" id="position" type="text" name="position" placeholder="Position">
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">Category:</label>
            <div class="col-lg-8">
              <input type="text" id="category" class="form-control" name="category" placeholder="Category">
            </div>
          </div>
		   <div class="form-group">
            <label class="col-lg-3 control-label">Company:</label>
            <div class="col-lg-8">
              <input type="text" id="company" class="form-control" name="company" placeholder="Company">
            </div>
          </div>
		  <div class="form-group">
            <label class="col-lg-3 control-label">Description:</label>
            <div class="col-lg-8">
              <textarea class="form-control" type="textarea" name="description" id="description" placeholder="Description" maxlength="140" rows="7"></textarea>
                        <span class="help-block"><p id="characterLeft" class="help-block ">You have reached the limit</p></span>                    
               
            </div>
          </div>
		   <div class="form-group">
            <label class="col-lg-3 control-label">Type:</label>
            <div class="col-lg-8">
              <input type="text" id="type" class="form-control" name="type" placeholder="Full Time/ Part Time">
            </div>
          </div>
		   <div class="form-group">
            <label class="col-lg-3 control-label">Salary:</label>
            <div class="col-lg-8">
              <input type="number" id="salary" class="form-control" name="salary" placeholder="14000">
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">Apply Deadline:</label>
            <div class="col-lg-8">
              <input type="text" id="deadline" class="form-control" name="deadline">
            </div>
          </div>
		   <div class="form-group">
            <label class="col-md-3 control-label"></label>
            <div class="col-md-8">
              <input type="submit" class="btn btn-primary" value="Save Changes">
              <span></span>
              <input onclick="goBack()" type="button" class="btn btn-default" value="Cancel">
            </div>
          </div>
        </form>
      </div>
  </div>
</div>
<hr>
<script type="text/javascript">
  $('#deadline').datepicker("update", '{{user.dob}}');
  function goBack() {
    window.history.back()
}
</script>