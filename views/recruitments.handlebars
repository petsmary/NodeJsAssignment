
 <h2 class="page-header">Recruitments</h2>
<p></p>
    <table id="example" class="table table-striped table-bordered" style="width:100%">
	 {{#each jobs}}
      <thead>
        <tr>
          <th>{{this.position}}</th>
          <th>{{this.company}}</th>
          <th>Username</th>
          <th>Apply Date</th>
       
        </tr>
      </thead>
      <tbody>
       
        <tr>
         
         
		  {{#each this.recruitments}}
		  <tr>
		   <td></td>
         
          <td></td>
		  
			<td><a href="/users/userInfo/{{this.employee_id}}" value="{{this.employee_id}}" name="userInfo">{{this.employee_id}}</a></td>
			<form>
			<input type="hidden" value="{{this.employee_id}}" name="userInfo"/>
			</form>
			<td>{{this.date}}</td>
			</tr>
          {{/each}}
        {{/each}}
      </tbody>
      <tfoot>
          <th>{{this.position}}</th>
          <th>{{this.company}}</th>
          <th>Username</th>
          <th>Apply Date</th>
      </tfoot>
    </table>
</div>
<br>
<script>
  $(document).ready( function () {
			$('#example')
				.addClass( 'nowrap' )
				.dataTable( {
					responsive: true,
					columnDefs: [
						{ targets: [-1, -3], className: 'dt-body-right' }
					]
				} );
		} );
</script>
