<div class="container">
    <h1>Edit Job</h1>
  	<hr>
	
      <!-- edit form column -->
      <div class="col-md-9 personal-info">
        
        <h3>Job info</h3>
        <form class="form-horizontal" role="form" action="/jobs/update" method="post" >
		<input type="hidden" value="{{id}}" name="id" />
          <div class="form-group">
		  
            <label class="col-lg-3 control-label">Position:</label>
            <div class="col-lg-8">
              <input class="form-control" type="text" name = "position" value="{{position}}">
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">Category:</label>
            <div class="col-lg-8">
              <input class="form-control" type="text" name = "category" value="{{category}}">
            </div>
          </div>
		   <div class="form-group">
            <label class="col-lg-3 control-label">Company:</label>
            <div class="col-lg-8">
              <input class="form-control" type="text" name = "company" value="{{company}}">
            </div>
          </div>
		  <div class="form-group">
            <label class="col-lg-3 control-label">Description:</label>
            <div class="col-lg-8">
             <textarea class="form-control" type="textarea" name="description" id="description" placeholder="Description" maxlength="140" rows="7">{{description}}</textarea>
                        <span class="help-block"></span>                 
               
            </div>
          </div>
		   <div class="form-group">
            <label class="col-lg-3 control-label">Type:</label>
            <div class="col-lg-8">
             <input class="form-control" type="text" name = "type" value="{{type}}"></input>
            </div>
          </div>
		   <div class="form-group">
            <label class="col-lg-3 control-label">Salary:</label>
            <div class="col-lg-8">
              <input class="form-control" type="number" name = "salary" value="{{salary}}">
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">Apply Deadline:</label>
            <div class="col-lg-8">
              <input class="form-control" type="text" id="deadline" name ="deadline" value="{{deadline}}">
            </div>
          </div>
		   <div class="form-group">
            <label class="col-md-3 control-label"></label>
            <div class="col-md-8">
              <input type="submit" class="btn btn-primary" value="Update">
              <span></span>
              <input onclick="goBack()" type="button" class="btn btn-default" value="Cancel">
            </div>
          </div>
        </form>
      </div>
  </div>
</div>
<hr>
<script type="text/javascript">
  $('#deadline').datepicker();
  function goBack() {
    window.history.back()
}
</script>