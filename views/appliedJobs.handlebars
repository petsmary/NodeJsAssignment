
 <h2 class="page-header">Applied Jobs</h2>
<p></p>
    <table id="example" class="table table-striped table-bordered" style="width:100%">
	
      <thead>
        <tr>
          <th>Position</th>
          <th>Company</th>
         
          <th>Apply Date</th>
       
        </tr>
      </thead>
      <tbody>
        {{#each jobs}}
        <tr>
         <td>{{this.position}}</td>
         
          <td>{{this.company}}</td>
         
		  {{#each this.recruitments}}
			<td>{{this.date}}</td>
          {{/each}}
        {{/each}}
		</tr>
      </tbody>
      <tfoot>
         <th>Position</th>
          <th>Company</th>
          <th>Apply Date</th>
      </tfoot>
    </table>
</div>
<br>
<script>
  $(document).ready( function () {
			$('#example')
				.addClass( 'nowrap' )
				.dataTable( {
					responsive: true,
					columnDefs: [
						{ targets: [-1, -3], className: 'dt-body-right' }
					]
				} );
		} );
</script>
